<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item>
    </style>


    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
<!--        <item name="android:background">@drawable/splash</item>-->
    </style>

    <!-- Splash Screen Theme for Light Mode -->
    <style name="Theme.Fate.Splash" parent="Theme.SplashScreen">
        <!-- The static image for the splash screen -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_light</item>

        <!-- Background color behind the splash image -->
        <item name="android:windowSplashScreenBackground">@color/splash_background</item>

        <!-- Optional: control how long the splash screen stays up (in ms) -->
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
    </style>
</resources>